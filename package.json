{
  "name": "node-mkcert",
  "version": "1.0.0",
  "description": "A wrapper for native mkcert",
  "main": "lib/index.js",
  "scripts": {
    "lint": "xo",
    "lint-fix": "xo --fix",
    "test": "c8 ava -v",
    "test:ci": "c8 ava -v",
    "prepare": "husky install"
  },
  "keywords": [
    "mkcert",
    "node-mkcert",
    "https",
    "ca"
  ],
  "files": [
    "lib"
  ],
  "author": "oustn zeng",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@types/commander": "^2.12.2",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.7",
    "@types/node-forge": "^1.3.0",
    "@types/semver": "^7.3.13",
    "ava": "^5.0.1",
    "c8": "^7.12.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "typescript": "^4.8.4",
    "xo": "^0.52.4"
  },
  "dependencies": {
    "commander": "^9.4.1",
    "debug": "^4.3.4",
    "fs-extra": "^10.1.0",
    "lookpath": "^1.2.2",
    "node-forge": "^1.3.1",
    "schema-utils": "^4.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oustn/node-mkcert.git"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "rules": {
      "unicorn/no-reduce": "off",
      "unicorn/string-content": "off",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "ts": "never"
        }
      ]
    }
  },
  "c8": {
    "include": [
      "src"
    ],
    "reporter": [
      "json",
      "text",
      "html"
    ],
    "all": true
  },
  "ava": {
    "files": [
      "test/**/*.test.ts"
    ],
    "extensions": [
      "ts",
      "js"
    ],
    "timeout": "2m"
  },
  "prettier": {
    "printWidth": 120,
    "bracketSpacing": true
  },
  "lint-staged": {
    "*.ts": "npm run lint-fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
