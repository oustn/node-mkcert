{
  "name": "node-mkcert",
  "version": "1.0.2",
  "description": "A wrapper for native mkcert",
  "main": "lib/index.js",
  "scripts": {
    "lint": "xo",
    "test": "c8 ava -v",
    "test:ci": "c8 ava -v",
    "prepare": "husky install"
  },
  "keywords": [
    "mkcert",
    "node-mkcert",
    "https",
    "ca"
  ],
  "files": [
    "lib"
  ],
  "author": "oustn zeng",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^18.11.7",
    "@types/semver": "^7.3.13",
    "ava": "^5.0.1",
    "c8": "^7.12.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "typescript": "^4.8.4",
    "xo": "^0.52.4"
  },
  "dependencies": {
    "@octokit/rest": "^19.0.5",
    "execa": "~5.1.1",
    "fs-extra": "^11.0.0",
    "node-downloader-helper": "^2.1.4",
    "semver": "^7.3.8"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oustn/node-mkcert.git"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "rules": {
      "unicorn/no-reduce": "off",
      "unicorn/string-content": "off",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "ts": "never"
        }
      ]
    }
  },
  "c8": {
    "include": [
      "src"
    ],
    "reporter": [
      "json",
      "text",
      "html"
    ],
    "all": true
  },
  "ava": {
    "files": [
      "test/**/*.test.ts"
    ],
    "extensions": [
      "ts",
      "js"
    ],
    "timeout": "2m"
  },
  "prettier": {
    "printWidth": 120,
    "bracketSpacing": true
  },
  "lint-staged": {
    "*.ts": "npm run xo --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
